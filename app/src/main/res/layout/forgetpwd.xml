<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"
        android:background="#252525">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x13"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="#fff"
            android:textSize="@dimen/x30" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y7"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x11"
                android:src="@mipmap/tellphone" />

            <EditText
                android:id="@+id/edt_telephonenum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                android:hint="手机号码"
                android:inputType="number"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/securitycode" />

            <EditText
                android:id="@+id/edt_yzm"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:textSize="@dimen/x28" />


            <Button
                android:id="@+id/btn_yzm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x11"
                android:background="@drawable/btn_yanzhengma"
                android:text="获取验证码"
                android:textColor="#fafafa"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x11"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/edt_newpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                android:hint="新密码"
                android:inputType="textPassword"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x11"
                android:src="@mipmap/lock" />

            <EditText
                android:id="@+id/edt_confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />


        <Button
            android:id="@+id/btn_forgotpwd"
            android:layout_width="@dimen/x299"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/btn_yuanjiao"
            android:text="找回密码"
            android:textColor="#fafafa"
            android:textSize="@dimen/x30" />


    </LinearLayout>


</LinearLayout>








