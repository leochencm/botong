<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"
        android:background="#252525">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x13"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="撰写意见反馈"
            android:textColor="#fff"
            android:textSize="@dimen/x30" />


        <TextView
            android:id="@+id/txt_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x13"
            android:gravity="center"
            android:text="发布"
            android:textColor="#fff"
            android:textSize="@dimen/x28" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginRight="@dimen/x11">

        <EditText
            android:id="@+id/edt_suggest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:gravity="top"
            android:hint="请输入反馈意见！"
            android:paddingLeft="@dimen/x11"
            android:paddingTop="@dimen/y9"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/x26" />


        <TextView
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginBottom="@dimen/y10"
            android:text="150/150" />


    </RelativeLayout>

</LinearLayout>