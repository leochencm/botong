<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"
        android:background="#252525">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x13"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="修改手机号码"
            android:textColor="#fff"
            android:textSize="@dimen/x30" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y7"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:layout_marginLeft="@dimen/x11">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:autoText="false"
                android:gravity="center_vertical"
                android:password="false"
                android:phoneNumber="true"
                android:text="当前手机："
                android:textColor="@color/black"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x150"
                android:gravity="center_vertical"
                android:text="13322222222"
                android:textColor="@color/black"
                android:textSize="@dimen/x26" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:background="#fff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x11"
                android:src="@mipmap/securitycode" />

            <EditText
                android:id="@+id/edt_yzm"
                android:layout_width="@dimen/x180"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x50"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textSize="@dimen/x26" />


            <Button
                android:id="@+id/btn_yzm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/btn_yanzhengma"
                android:text="获取验证码"
                android:textColor="#fafafa"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#aaaaaa" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/x299"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/btn_yuanjiao"
            android:text="确定"
            android:textColor="#fafafa"
            android:textSize="@dimen/x28" />


    </LinearLayout>


</LinearLayout>








